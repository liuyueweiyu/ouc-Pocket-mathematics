@import "/component/sign/sign";

.inputitem{
  padding-top: 50rpx; 
  width: 456rpx;
  height: 72rpx;
  border-bottom: rgb(217, 217, 217) solid 4rpx;
}
.paddingclear{
  padding: 0;
}
.inputitem image{
  float: left;
  width: 38rpx;
  margin-left: 15rpx;  
  box-sizing: border-box;
}
.inputitem input{
  width: 350rpx;
  float: right;
  font-size:30rpx;
  font-weight:400;
  color:rgba(61,61,61,1);
  line-height:24rpx;
}
.navigators{
  margin: 57rpx 0 25rpx 0;
}
.navigator{
  float: left;
  font-size:20rpx;
  font-weight:400;
  color:rgba(143,143,143,1);
  line-height:24rpx;
}
.right{
  float: right;
}

.email{
  position: relative;
}
.email input{
  position: absolute;
  width:244rpx;
  right: 106rpx;
}
.send{
  position: absolute;
  right: 0;
  width:100rpx;
  height:50rpx;
  padding: 0;
  background:rgba(59,89,152,1);
  border-radius:6rpx;
  font-size:24rpx;
  color:rgba(255,255,255,1);
  line-height:50rpx;
}
.right{
  float: right;
}

.button{
  width:456rpx;
  height:80rpx;
  background:#fa8b4b;
  border-radius:10rpx;
  font-size:32rpx;
  font-weight:400;
  /* margin-top:87rpx; */
  
  color:rgba(255,255,255,1);
}