/* component/dialogue/dialogue.wxss */
@import "../imagelist/imagelist";
@import "../intro/intro";
@import "../loading/loading";
.dialoguelist{
  background: #EFEFF4;
}
.dialogue{
  padding: 30rpx;
  padding-bottom: 22rpx;
  margin-bottom:8rpx;
  background: #fff;
}
.dialogue:last-of-type{
  margin-bottom: 0;
}
.dialogue .title{
  display: block;
  font-size:37rpx;
  margin:30rpx 0;
}
.dialogue .content{
  display: block;
  font-size:28rpx;
  color:rgba(54,54,54,1);
  line-height:36rpx;
  margin-bottom: 42rpx;
}
.clearfloat:after {
    display: block;
    clear: both;
    content: "";
    visibility: hidden;
    height: 0
}
.clearfloat {
    zoom: 1
}
.reply{
  margin-top: 30rpx;
}
.reply .item{
  display: inline-block;
  margin-right: 64rpx;
}
.reply .item image{ 
  float: left;
  margin-right: 9rpx;
}
.reply .item .scan{
  width: 40rpx;
  height: 27rpx;
  margin-top: 5rpx;
}
.reply .item .commit{
  width: 33rpx;
  height: 29rpx;
  margin-top: 6rpx;
}
.reply .item text{
  float: left;
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.inputbox{
  display: flex;
  margin:30rpx 0 22rpx;
  height: 50rpx;
}
.reply .picture{
  /* float: left; */
  display: block;
  /* display: inline-block; */
  width:50rpx;
  height:50rpx;
  margin-bottom: 4rpx;
}
.reply .commitinput{
  flex:2;
  display: block;
  margin:0 8rpx;
  height:46rpx;
  border-radius:8rpx;
  border: 1rpx solid rgba(217,217,217,1);
  font-size:24rpx;
  color:rgba(102,102,102,1);
  padding: 0 16rpx;
}
.reply .button{
  display: inline-block;
  width:86rpx;
  height:56rpx;
  /* height:61rpx; */
  line-height:49rpx;

  border:1rpx solid rgba(217,217,217,1);
  border-radius: 0;
  font-size: 24rpx;
  background:rgb(16,175,255);
  color: #fff;
  padding: 0;
}
.empty{
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size:30rpx;
  font-weight:400;
  color:rgba(179,179,179,1);
}