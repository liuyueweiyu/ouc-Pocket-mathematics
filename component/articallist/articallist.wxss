/* component/articallist/articallist.wxss */
.articallist{
  padding: 0 30rpx 32rpx;

}
.articallist .item{
  height:124rpx;
  margin-top: 32rpx;
}
.articallist .item image{
  width:200rpx;
  height: 100%;
  float: left;
  border-radius:10rpx;
  margin-right: 27rpx;
  background:rgba(0,0,0,1);
}
.articallist .item .textbox{
  float: left;
  height: 100%;
  max-width:463rpx;
}
.articallist .item .title{
  display: block;
  margin-bottom: 23rpx;
  font-size:36rpx;
  max-height: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height:1.75em;

}
.articallist .item .intro{
  display: block;
  font-size:30rpx;
  color:rgba(191,191,191,1);
}